<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <display-code>图片分享</display-code>
    <!--配置spring初始化参数-->
    <context-param>
        <param-code>contextConfigLocation</param-code>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <!--配置Spring启动时的监听器-->
    <listener>
        <listener-class>com.xm.picture_share.listener.PictureShareListener</listener-class>
    </listener>

    <servlet-mapping>
        <servlet-code>default</servlet-code>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-code>default</servlet-code>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-code>default</servlet-code>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-code>default</servlet-code>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-code>default</servlet-code>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-code>default</servlet-code>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    <!--配置SpringMVC-->
    <servlet>
        <servlet-code>spring-mvc</servlet-code>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-code>contextConfigLocation</param-code>
            <param-value>classpath:spring-mvc-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-code>spring-mvc</servlet-code>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--字符过滤器-->
    <filter>
        <filter-code>encodingFilter</filter-code>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-code>encoding</param-code>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-code>forceEncoding</param-code>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-code>encodingFilter</filter-code>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--登陆验证
    使用spring的代理，可以配置filter的bean为spring容器中的bean-->
    <filter>
        <filter-code>loginFilter</filter-code>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-code>targetFilterLifecycle</param-code>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-code>loginFilter</filter-code>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 解决Hibernate的延迟加载造成的Session提前关闭问题，设置该项使Session保持Request请求
             完成才关闭Session。      -->
    <filter>
        <filter-code>opensession</filter-code>
        <filter-class>org.springframework.orm.hibernate5.support.OpenSessionInViewFilter</filter-class>
        <init-param>
            <param-code>singleSession</param-code>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-code>flushMode</param-code>
            <param-value>AUTO</param-value>
        </init-param>
    </filter>


    <filter-mapping>
        <filter-code>opensession</filter-code>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
